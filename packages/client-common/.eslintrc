{
  "settings": {
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true,
        "project": ["packages/*/tsconfig.json", "tsconfig.json"]
      }
    }
  },
  "rules": {
    "i18next/no-literal-string": "off",
    "@typescript-eslint/no-redundant-type-constituents": "off",
    "no-restricted-imports": [
      "error",
      {
        "patterns": [
          {
            "group": ["@meltstudio/db"],
            "message": "usage of @meltstudio/db imports is not allowed, please use types from the sdk module"
          },
          {
            "group": ["src/**/*", "../**/*"],
            "message": "usage of src /* and ../**/* imports is not allowed, use paths defined in tsconfig"
          }
        ]
      }
    ]
  },
  "extends": [
    "@meltstudio/eslint-config/react-ts",
    "@meltstudio/eslint-config/jest-react-overrides",
    "plugin:i18next/recommended"
  ],
  "root": true
}
